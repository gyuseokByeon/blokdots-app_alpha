{
  "name": "blokdots",
  "version": "0.0.1",
  "description": "A software to programm hardware using the IFTTT principle",
  "main": "app.js",
  "scripts": {
    "test": "test",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps && ./node_modules/.bin/electron-rebuild --version=2.0.4",
    "rebuild": "./node_modules/.bin/electron-rebuild --version=2.0.4",
    "pack": "build --dir ~/Desktop",
    "dist": "build",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=build/icon.icns --prune=true --out=dist --electron-version=2.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olivierbrcknr/blokdots-app.git"
  },
  "keywords": [
    "blokdots",
    "hardware",
    "arduino",
    "ifttt",
    "node",
    "electron"
  ],
  "author": "Olivier Br√ºckner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olivierbrcknr/blokdots-app/issues"
  },
  "homepage": "http://blokdots.com",
  "dependencies": {
    "avrgirl-arduino": "github:ajfisher/avrgirl-arduino#update-sp-6",
    "johnny-five": "^1.0.0",
    "jquery": "^3.3.1",
    "node-pre-gyp": "^0.10.3",
    "serialport": "^6.2.1",
    "usb": "git+https://git@github.com/tessel/node-usb.git"
  },
  "devDependencies": {
    "electron-builder": "^20.28.2",
    "electron-ipc": "^0.3.0",
    "electron-packager": "^12.1.1",
    "electron-prebuilt-compile": "^2.0.7",
    "electron-rebuild": "^1.8.1"
  },
  "build": {
    "appId": "yourappid",
    "buildDependenciesFromSource": true,
    "asar": false,
    "icon": "icon.ico",
    "mac": {
      "category": "test.jo"
    }
  }
